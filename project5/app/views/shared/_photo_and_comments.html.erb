<div>
    <hr /><p>
    <strong> Date taken: </strong>
    <%= photo.date_time %><br />
    <%= image_tag photo.file_name %>
    </p>
    <div>
        <% if photo.comments.count > 0 %>
            <strong> Comments: </strong><br />
        <% end %>
        <% photo.comments.each do |comment| %>
            <p>
                <%= link_to comment.user.first_name + " "+comment.user.last_name, user_path(comment.user) %> : 
                <%= comment.comment %>
                <br/>
                <i> <%= comment.date_time %>
                </i>
            </p>
        <% end %>
        <% if session[:login].nil? %>
            <div> <%= link_to 'Log in', login_users_path %> to post comments. </div>
        <% else %>
            <% if posting.nil? %>
                <%= link_to 'Post a comment', new_photo_comment_path(photo) %>
            <% end %>
        <% end %>
    </div>
</div>
