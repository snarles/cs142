<div>
    <p> Now viewing <%= link_to @user.full_name, user_path(@user) %>'s photo:</p><br/>
    <strong> Date taken: </strong>
    <%= @photo.date_time %><br />
    <%= image_tag @photo.file_name %>
    </p>
    <div>
        <% if @photo.comments.count > 0 %>
            <strong> Comments: </strong><br />
        <% end %>
        <% @photo.comments.each do |comment| %>
            <p>
                <%= link_to comment.user.first_name + " "+comment.user.last_name, user_path(comment.user) %> : 
                <%= comment.comment %>
            </p>
        <% end %>
    </div>
    <div>
    <strong>Add a comment:</strong>
    <%= form_for [@photo,@comment] do |f|%>
        <p><%= f.label :comment %><br/>
        <%= f.text_area :comment %></p>
        <p><%= f.submit %></p>
    <% end %>
    </div>
</div>


